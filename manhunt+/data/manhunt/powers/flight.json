{
    "name":"§l§nFlight",
    "description":"When not sprinting charge up your \"Flight\" bar, holding your Primary ability key will propel you forward pretty quickly, whilst draining the \"Flight\" bar that you charged up prior. (this ability can be used to negate fall damage)",
    "type": "origins:multiple",
    "resource":{ 
        "type": "origins:resource",
        "min": 0,
        "max": 20,
        "start_value": 20,
        "hud_render": {
			"should_render": true,
			"sprite_location": "origins:textures/gui/resource_bar.png",
			"bar_index": 4
			}   
        },

    "gain_resource": {
        "type": "origins:action_over_time",
	    "entity_action": {
            "type": "origins:change_resource",
            "resource": "manhunt:flight_resource",
            "change": 1
        },
    "interval": 30,
    "condition": {
        "type": "origins:and",
        "conditions": [
                {
                    "type": "origins:on_block"
                },
                {
                    "type": "origins:sneaking",
                    "inverted": true
                }
            ]
        }
    },

    "activate":{
        "type": "origins:active_self",
                "entity_action": {
                    "type": "origins:and",
                    "actions": [
                        {
                            "type": "origins:execute_command",
                            "command": "execute run effect give @s minecraft:slow_falling 1 0 true"
                        },
                        {
                            "type": "origins:execute_command",
                            "command": "execute at @s run particle minecraft:firework ^ ^0.5 ^-0.5 0.1 0.1 0.1 0.1 20 normal"
                        },
                        {
                            "type": "origins:add_velocity",
                            "z": 0.2,
                            "space": "local"
                        },
                        {
                            "type": "origins:change_resource",
                            "resource": "manhunt:flight_resource",
                            "change": -1
                        }
                    ]
                    },
                "key": {
                    "key": "key.origins.primary_active",
                    "continuous": true
            },
            "cooldown": 1,
            "hud_render": {
                "should_render": false
            },
            "condition": {
                "type": "origins:resource",
                "resource": "manhunt:flight_resource",
                "comparison": ">",
                "compare_to": 0
        }
    }
}