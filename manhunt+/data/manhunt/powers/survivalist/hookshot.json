{
    "type": "origins:multiple",
    "cooldown": {
        "type": "origins:resource",
        "min": 0,
        "max": 240,
        "start_value": 0,
        "hud_render":  {
            "sprite_location": "manhunt:textures/survivalist.png",
            "bar_index": 0,
            "should_render": true,
            "condition":{
                "type": "origins:resource",
                "resource": "manhunt:survivalist/hookshot_cooldown",
                "comparison": ">",
                "compare_to": 0
            }
        }
    },
    "cooldown_down": {
        "type": "origins:action_over_time",
        "entity_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:change_resource",
                    "resource": "manhunt:survivalist/hookshot_cooldown",
                    "change": -1
                }
            ]
        },
        "interval": 1
    },
    "keybind": {
        "type": "origins:active_self",
        "entity_action": {
            "type": "origins:trigger_cooldown",
            "power": "manhunt:survivalist/hookshot_keybind"
        },
        "cooldown": 1,
        "hud_render": {
            "should_render": false
        },
        "key": {
            "key": "key.origins.primary_active"
        }
    },
    "grappling_hook": {
        "type": "origins:active_self",
        "entity_action": {
            "type": "origins:raycast",
            "distance": 16,
            "block": true,
            "entity": true,
            "shape_type": "collider",
            "fluid_handling": "none",
            "bientity_action": {
                "type": "origins:add_velocity",
                "z": -1.25,
                "client": false
            },
            "hit_action": {
                "type": "origins:and",
                "actions": [
                    {
                        "type": "origins:execute_command",
                        "command": "playsound minecraft:block.anvil.destroy player @a[distance=..10] ~ ~ ~ 1 1.5"
                    },
                    {
                        "type": "origins:swing_hand",
                        "hand": "OFF_HAND"
                    },
                    {
                        "type": "origins:add_velocity",
                        "space": "local",
                        "z": 1.1
                    },
                    {
                        "type": "origins:change_resource",
                        "resource": "manhunt:survivalist/hookshot_cooldown",
                        "change": 240
                    }
                ]
            },
            "command_at_hit": "particle minecraft:item minecraft:anvil ~ ~ ~ 0.2 0.2 0.2 0.001 40 normal",
            "command_along_ray": "function manhunt:hook",
            "command_step": 0.2,
            "command_along_ray_only_on_hit": true
        },
        "cooldown": 1,
        "hud_render": {
            "should_render": false
        },
        "condition":  {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:resource",
                    "resource": "manhunt:survivalist/hookshot_cooldown",
                    "comparison": "==",
                    "compare_to": 0
                },
                {
                    "type": "apugli:key_pressed",
                    "key": {
                        "key": "key.origins.primary_active",
                        "continuous": true
                    }
                }
            ]
        },
        "key": {
            "key": "key.attack"
        }
    },
    "overlay": {
        "type": "origins:status_bar_texture",
        "texture": "manhunt:textures/gui/hook_overlay.png",
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:raycast",
                    "distance": 16,
                    "block": true,
                    "entity": true,
                    "shape_type": "collider",
                    "fluid_handling": "none"
                },
                {
                    "type": "origins:resource",
                    "resource": "manhunt:survivalist/hookshot_cooldown",
                    "comparison": "==",
                    "compare_to": 0
                },
                {
                    "type": "apugli:key_pressed",
                    "key": {
                        "key": "key.origins.primary_active",
                        "continuous": true
                    }
                }
            ]
        }
    },
    "name": "Hookshot",
    "description": "You have access to a quick-use grappling hook to propel yourself forward.",
    "badges": [
        {
            "type": "origins:tooltip",
            "sprite": "origins:textures/gui/badge/star.png",
            "text": "(Hitting an entity with the hook will additionally pull them towards you)"
        },
        {
            "type": "origins:keybind",
            "sprite": "origins:textures/gui/badge/toggle.png",
            "text": "Hold %s and left click to use your hook!"
        },
        {
            "type": "origins:tooltip",
            "sprite": "manhunt:textures/icons/cooldown.png",
            "text": "Cooldown: 12s"
        }
    ]
}