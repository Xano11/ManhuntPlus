                            {
                                "type": "origins:ingredient",
                                "ingredient": {
                                    "item": "minecraft:amethyst_shard"
                                }
                            },
                            {
                                "type": "origins:nbt",
                                "nbt": "{Tags:[\"enchanter_stone_broken\"]}"
                            }
                        ]
                    },
