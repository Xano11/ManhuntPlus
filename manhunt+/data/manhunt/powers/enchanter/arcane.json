            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:ingredient",
                    "ingredient": {
                        "item": "minecraft:enchanted_book"
                    }
                },
                {
                    "type": "origins:nbt",
                    "nbt": "{Tags:[\"recalling_book\"]}"
                }
            ]
