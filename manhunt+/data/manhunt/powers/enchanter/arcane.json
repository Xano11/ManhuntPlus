            "type": "origins:change_resource",
            "resource": "manhunt:enchanter/arcane_energy",
            "change": 1
        },
        "interval": 20,
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:resource",
                    "resource": "manhunt:enchanter/arcane_energy",
                    "comparison": "<",
                    "compare_to": 100
                },
                {
                    "type": "origins:inventory",
                    "process_mode": "items",
                    "item_condition": {
                        "type": "origins:and",
                        "conditions": [
                            {
                                "type": "origins:ingredient",
                                "ingredient": {
                                    "item": "minecraft:amethyst_shard"
                                }
                            },
                            {
                                "type": "origins:nbt",
                                "nbt": "{Tags:[\"enchanter_stone\"]}"
                            }
                        ]
                    },
                    "comparison": ">",
                    "compare_to": 0
                }
            ]
        }
    },
    "tooltip_stone": {
        "type": "origins:tooltip",
        "item_condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:ingredient",
                    "ingredient": {
                        "item": "minecraft:amethyst_shard"
                    }
                },
                {
                    "type": "origins:nbt",
                    "nbt": "{Tags:[\"enchanter_stone\"]}"
