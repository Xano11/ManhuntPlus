    "shatter_xp": {
        "type": "origins:active_self",
        "entity_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:add_xp",
                    "points": 100
                },
                {
                    "type": "origins:change_resource",
                    "resource": "manhunt:enchanter/arcane_energy",
                    "change": 0,
                    "operation": "set"
                },
                {
                    "type": "origins:apply_effect",
                    "effect": {
                        "effect": "minecraft:absorption",
                        "duration": 600,
                        "amplifier": 1,
                        "show_particles": false
                    }
                },
                {
                    "type": "origins:equipped_item_action",
                    "equipment_slot": "mainhand",
                    "action": {
                        "type": "origins:and",
                        "actions": [
                            {
                                "type": "origins:merge_nbt",
                                "nbt": "{Tags:[\"enchanter_stone_broken\"]}"
                            },
                            {
                                "type": "origins:merge_nbt",
                                "nbt": "{CustomModelData:2}"
                            },
                            {
                                "type": "apugli:cooldown",
                                "ticks": 600
                            }
                        ]
                    }
                },
                {
                    "type": "origins:execute_command",
                    "command": "playsound minecraft:block.enchantment_table.use player @a ~ ~ ~ 2 1.2"
                },
                {
                    "type": "origins:execute_command",
                    "command": "playsound minecraft:block.sculk_sensor.break player @a ~ ~ ~ 1 2"
                }
            ]
        },
        "cooldown": 1,
        "hud_render": {
            "should_render": false
        },
        "key": "key.use",
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:resource",
                    "resource": "manhunt:enchanter/arcane_energy",
                    "comparison": "==",
                    "compare_to": 100
                },
                {
                    "type": "origins:equipped_item",
                    "equipment_slot": "mainhand",
                    "item_condition": {
                        "type": "origins:and",
                        "conditions": [
                            {
                                "type": "origins:ingredient",
                                "ingredient": {
                                    "item": "minecraft:amethyst_shard"
                                }
                            },
                            {
                                "type": "origins:nbt",
