                    "item_action": {
                        "type": "origins:and",
                        "actions": [
                            {
                                "type": "origins:merge_nbt",
                                "nbt": "{Tags:[\"enchanter_stone\"]}"
                            },
                            {
                                "type": "origins:merge_nbt",
