                {
                    "type": "origins:execute_command",
                    "command": "give @s minecraft:paper 6"
                },
                {
                    "type": "origins:execute_command",
                    "command": "playsound minecraft:item.book.page_turn player @a ~ ~ ~ 0.6 1.5"
                }
            ]
        },
