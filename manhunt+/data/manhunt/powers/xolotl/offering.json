{
    "type": "origins:multiple",
    "specter": {
        "type": "origins:action_on_entity_use",
        "bientity_action": {
            "type": "origins:target_action",
            "action": {
                "type": "origins:and",
                "actions": [
                    {
                        "type": "origins:if_else",
                        "condition": {
                            "type": "origins:resource",
                            "resource": "manhunt:xolotl/wolf/wolves_offering",
                            "comparison": "==",
                            "compare_to": 1
                        },
                        "if_action": {
                            "type": "origins:change_resource",
                            "resource": "manhunt:xolotl/wolf/wolves_offering",
                            "change": 0,
                            "operation": "set"
                        },
                        "else_action": {
                            "type": "origins:change_resource",
                            "resource": "manhunt:xolotl/wolf/wolves_offering",
                            "change": 1,
                            "operation": "set"
                        }
                    },
                    {
                        "type": "origins:execute_command",
                        "command": "playsound minecraft:entity.allay.item_given player @a ~ ~ ~ 1 0.6"
                    }
                ]
            }
        },
        "bientity_condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:owner"
                },
                {
                    "type": "origins:in_set",
                    "set": "manhunt:xolotl/wolf/wolfpack_wolves"
                }
            ]
        },
        "item_condition": {
            "type": "origins:empty"
        },
        "hands": [
            "main_hand"
        ],
        "condition": {
            "type": "origins:resource",
            "resource": "manhunt:xolotl/wolf/wolfpack_key_check",
            "comparison": ">",
            "compare_to": 0
        }
    },
    "name": "Offerings",
    "description": "Wolves respond to your call and serve you wherever you go.",
    "badges": [
        {
            "type": "origins:tooltip",
            "sprite": "origins:textures/gui/badge/star.png",
            "text": "Overclocked: Movement speed decreased per 15% for every wave hit (max of 45%)"
        },
        {
            "type": "origins:tooltip",
            "sprite": "origins:textures/gui/badge/toggle.png",
            "text": [
                "Hold \"",
                {
                    "keybind": "key.origins.primary_active"
                },
                "\" and press \"",
                {
                    "keybind": "key.attack"
                },
                "\" to throw the pillar down!"
            ]
        },
        {
            "type": "origins:tooltip",
            "sprite": "manhunt:textures/icons/cooldown.png",
            "text": "Cooldown: 1m per pillar\nPillar stock: 2 pillars."
        }
    ]
}