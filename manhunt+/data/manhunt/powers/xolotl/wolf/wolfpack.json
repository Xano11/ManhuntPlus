                                "permission_level": 4
                            },
                            {
                                "type": "origins:execute_command",
                                "command": "data modify entity @s Owner set from entity @p[tag=wolf_owner] UUID",
                                "permission_level": 4
                            }
                        ]
                    },
                    "bientity_action": {
                        "type": "origins:add_to_set",
