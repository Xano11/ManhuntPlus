{
    "type": "origins:multiple",
    "summon": {
        "type": "origins:active_self",
        "entity_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:execute_command",
                    "command": "tag @s add riding_wolf",
                    "permission_level": 4
                },
                {
                    "type": "origins:spawn_entity",
                    "entity_type": "minecraft:wolf",
                    "tag": "{PersistenceRequired:1b,CanPickUpLoot:0b,Age:0,CollarColor:1b,Tags:[\"xolotl_mount\"]}",
                    "entity_action": {
                        "type": "origins:and",
                        "actions": [
                            {
                                "type": "origins:execute_command",
                                "command": "scale delay set pehkui:base 0 @s",
                                "permission_level": 4
                            },
                            {
                                "type": "origins:execute_command",
                                "command": "scale set pehkui:base 4 @s",
                                "permission_level": 4
                            }
                        ]
                    },
                    "bientity_action": {
                        "type": "origins:mount"
                    }
                },
                {
                    "type": "origins:execute_command",
                    "command": "playsound minecraft:item.nether_wart.plant player @a ~ ~ ~ 3 0.8"
                }
            ]
        },
        "cooldown": 1200,
        "key": {
            "key": "key.origins.secondary_active"
        },
        "hud_render": {
            "should_render": true
        }
    },
    "riding": {
        "type": "origins:action_over_time",
        "entity_action": {
            "type": "origins:riding_action",
            "action": {
                "type": "origins:and",
                "actions": [
                    {
                        "type": "origins:execute_command",
                        "command": "execute on vehicle as @s at @s rotated as @p[tag=riding_wolf] run tp @s ~ ~ ~ ~ ~"
                    },
                    {
                        "type": "origins:add_velocity",
                        "z": 1,
                        "set": true,
                        "space": "local_horizontal_normalized"
                    }
                ]
            }
        },
        "interval": 1,
        "condition": {
            "type": "origins:riding",
            "bientity_condition": {
                "type": "origins:target_condition",
                "condition": {
                    "type": "origins:and",
                    "conditions": [
                        {
                            "type": "origins:entity_type",
                            "entity_type": "minecraft:wolf"
                        },
                        {
                            "type": "origins:power",
                            "power": "manhunt:xolotl/dog/doggo"
                        }
                    ]
                }
            }
        }
    },
    "name": "Packleader",
    "description": "Wolves respond to your call and serve you wherever you go.",
    "badges": [
        {
            "type": "origins:tooltip",
            "sprite": "origins:textures/gui/badge/star.png",
            "text": "Overclocked: Movement speed decreased per 15% for every wave hit (max of 45%)"
        },
        {
            "type": "origins:tooltip",
            "sprite": "origins:textures/gui/badge/toggle.png",
            "text": [
                "Hold \"",
                {
                    "keybind": "key.origins.primary_active"
                },
                "\" and press \"",
                {
                    "keybind": "key.attack"
                },
                "\" to throw the pillar down!"
            ]
        },
        {
            "type": "origins:tooltip",
            "sprite": "manhunt:textures/icons/cooldown.png",
            "text": "Cooldown: 1m per pillar\nPillar stock: 2 pillars."
        }
    ]
}