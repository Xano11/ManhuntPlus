{
    "name": "Gold Rush",
	"description": "Cull the powers of the depths, granting your pickaxe increased mining speed and imbuing a attack during the duration shattering the unfortunate opponents defenses.",
	"badges": [
		{
			"type": "origins:tooltip",
			"sprite": "origins:textures/gui/badge/star.png",
			"text": "You must hold a pickaxe to activate, 2.5x mining speed and fortune on blocks broken."
		},
        {
			"type": "origins:tooltip",
			"sprite": "origins:textures/gui/badge/info.png",
			"text": "15% more damage take on shatter."
		}
	],
    "type": "origins:multiple",

    "activation": {
        "type": "origins:active_self",
        "entity_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:change_resource",
			        "resource": "manhunt:geologist/gold_rush_resource",
			        "change": 5
                },
                {
                    "type": "origins:execute_command",
                    "command": "particle minecraft:lava ~ ~ ~ 0.5 0.001 0.5 0.1 15 normal"
                },
                {
                    "type": "origins:execute_command",
                    "command": "particle minecraft:flame ~ ~ ~ 0.5 0.1 0.5 0.01 30 normal"
                },
                {
                    "type": "origins:execute_command",
                    "command": "particle minecraft:dust_color_transition 1 0.1 0.1 2 1 0.5 0.1 ~ ~ ~ 0.5 0.001 0.5 0.001 35 normal"
                },
                {
                    "type": "origins:execute_command",
                    "command": "particle minecraft:dust_color_transition 1 0.5 0.1 2 1 0.1 0.1 ~ ~ ~ 0.5 0.001 0.5 0.001 35 normal"
                },
                {
                    "type": "origins:execute_command",
                    "command": "playsound minecraft:entity.blaze.death player @a ~ ~ ~ 2 2"
                },
                {
                    "type": "origins:execute_command",
                    "command": "playsound minecraft:entity.blaze.shoot player @a ~ ~ ~ 2 0.8"
                },
                {
                    "type": "origins:execute_command",
                    "command": "playsound minecraft:entity.blaze.ambient player @a ~ ~ ~ 2 0.1"
                }
            ]
        },
        "cooldown": 600,
        "hud_render": {
            "should_render": true,
            "sprite_location": "origins:textures/gui/resource_bar.png",
			"bar_index": 7
        },
        "key": {
            "key": "key.origins.primary_active",
            "continuous": false
        },
        "condition": {
            "type": "origins:equipped_item",
                "equipment_slot": "mainhand",
                "item_condition": {
                "type": "origins:ingredient",
                "ingredient": {
                    "tag": "manhunt:pickaxe"
                }
            }
        }
    },

    "resource": {
        "type": "origins:resource",
		"min": 0,
		"max": 5,
		"start_value": 0,
		"hud_render": {
			"should_render": true,
			"sprite_location": "origins:textures/gui/resource_bar.png",
			"bar_index": 6
		}
    },

    "resource_drain": {
        "type": "origins:action_over_time",
        "entity_action": {
            "type": "origins:change_resource",
