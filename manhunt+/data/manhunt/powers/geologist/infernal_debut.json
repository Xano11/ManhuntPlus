{
    "name": "Infernal Debut",
    "description": "LET THE FIRE WITHIN ME BURN! (wait did they did just eat coal)",
    "badges": [
        {
            "type": "origins:tooltip",
            "sprite": "origins:textures/gui/badge/star.png",
            "text": "You have a \"fuel\" bar that requires sustaining. With it, you have access to new abilities.\nInventory Smelting: All smeltable ores will be smelted automatically. The item must not be in a stack of multiple items.\nOverfueled: Having full bar will grant you passive fire aspect."
        },
        {
            "type": "origins:tooltip",
            "sprite": "minecraft:textures/item/coal.png",
            "text": "Eating coal or charcoal will slightly increase your bar.\nLava buckets will grant around double the amount."
        },
        {
            "type": "origins:tooltip",
            "sprite": "origins:textures/gui/badge/info.png",
            "text": "Overfueled: Going in water whilst at max fuel will deal 7 damage and reduce your bar by half."
        }
    ],
    "type": "origins:multiple",
    "fuel": {
        "type": "origins:resource",
        "min": 0,
        "max": 36000,
        "start_value": 0,
        "hud_render": {
            "should_render": true,
            "sprite_location": "origins:textures/gui/resource_bar.png",
            "bar_index": 7
        }
    },
    "eat_coal": {
        "type": "origins:edible_item",
        "item_condition": {
            "type": "origins:or",
            "conditions": [
                {
                    "type": "origins:ingredient",
                    "ingredient": {
                        "item": "minecraft:coal"
                    }
                },
                {
                    "type": "origins:ingredient",
                    "ingredient": {
                        "item": "minecraft:charcoal"
                    }
                }
            ]
        },
        "food_component": {
            "hunger": 2.0,
            "saturation": 0
        },
        "consume_action": "eat",
        "consuming_time_modifier": {
            "value": -0.5,
            "operation": "multiply_base"
        },
        "entity_action": {
            "type": "origins:change_resource",
            "resource": "manhunt:geologist/infernal_debut_fuel",
            "change": 1600
        }
    },
    "drink_lava": {
        "type": "origins:edible_item",
        "item_condition": {
            "type": "origins:ingredient",
            "ingredient": {
                "item": "minecraft:lava_bucket"
            }
        },
        "food_component": {
            "hunger": 2.0,
            "saturation": 0
        },
        "consume_action": "drink",
        "consume_sound": "minecraft:block.pointed_dripstone.drip_lava_into_cauldron",
        "consuming_time_modifier": {
            "value": 0.25,
            "operation": "multiply_base"
        },
        "return_stack": {
            "item": "minecraft:bucket",
            "amount": 1
        },
        "entity_action": {
            "type": "origins:change_resource",
            "resource": "manhunt:geologist/infernal_debut_fuel",
            "change": 3600
        }
    },
    "invsmelting": {
        "type": "origins:action_over_time",
        "entity_action": {
            "type": "origins:modify_inventory",
            "inventory_type": "inventory",
            "limit": 1,
            "item_condition": {
                "type": "origins:and",
                "conditions": [
                    {
                        "type": "origins:smeltable"
                    },
                    {
                        "type": "origins:amount",
                        "comparison": "==",
                        "compare_to": 1
                    },
                    {
                        "type": "origins:is_damageable",
                        "inverted": true
                    }
                ]
            },
            "item_action": {
                "type": "origins:modify",
                "modifier": "manhunt:geologist/smelt"
            },
            "entity_action": {
                "type": "origins:and",
                "actions": [
                    {
                        "type": "origins:execute_command",
                        "command": "playsound minecraft:entity.generic.extinguish_fire player @a ~ ~ ~ 1 1",
                        "permission_level": 4
                    },
                    {
                        "type": "origins:execute_command",
                        "command": "particle minecraft:smoke ~ ~1 ~ 0.01 0.1 0.2 0.1 5",
                        "permission_level": 4
                    },
                    {
                        "type": "origins:change_resource",
                        "resource": "manhunt:geologist/infernal_debut_fuel",
                        "change": -200
                    }
                ]
            }
        },
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:resource",
                    "resource": "manhunt:geologist/infernal_debut_fuel",
                    "compare_to": 200,
                    "comparison": ">="
                },
                {
                    "type": "origins:sneaking"
                }
            ]
        },
        "interval": 10
    },
    "fire_aspect": {
        "type": "origins:action_on_hit",
        "bientity_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:target_action",
                    "action": {
                        "type": "origins:set_on_fire",
                        "duration": 2
                    }
                }
            ]
        },
        "condition": {
            "type": "origins:resource",
            "resource": "manhunt:geologist/infernal_debut_fuel",
            "compare_to": 36000,
            "comparison": "=="
        },
        "bientity_condition": {
            "type": "origins:target_condition",
            "condition": {
                "type": "origins:living"
            }
        }
    },
    "water_ouch": {
        "type": "origins:action_over_time",
        "rising_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:change_resource",
                    "resource": "manhunt:geologist/infernal_debut_fuel",
                    "change": -18000
                },
                {
                    "type": "origins:damage",
                    "amount": 7,
                    "damage_type": "origins:hurt_by_water"
                }
            ]
        },
        "interval": 1,
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:fluid_height",
                    "fluid": "minecraft:water",
                    "comparison": ">",
                    "compare_to": 0
                },
                {
                    "type": "origins:resource",
                    "resource": "manhunt:geologist/infernal_debut_fuel",
                    "compare_to": 36000,
                    "comparison": "=="
                }
            ]
        }
    },
    "particles": {
        "type": "origins:particle",
        "particle": "minecraft:lava",
        "count": 1,
        "frequency": 5,
        "speed": 0.05,
        "condition": {
            "type": "origins:resource",
            "resource": "manhunt:geologist/infernal_debut_fuel",
            "compare_to": 36000,
            "comparison": "=="
        }
    }
}