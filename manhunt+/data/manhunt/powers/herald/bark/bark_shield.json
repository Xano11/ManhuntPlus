{
    "type": "origins:multiple",
    "keybind": {
        "type": "origins:active_self",
        "entity_action": {
            "type": "origins:trigger_cooldown",
            "power": "manhunt:herald/bark/bark_shield_keybind"
        },
        "cooldown": 1,
        "hud_render": {
            "should_render": false
        },
        "key": {
            "key": "key.origins.primary_active"
        }
    },
    "left_click": {
        "type": "origins:active_self",
        "cooldown": 1,
        "hud_render": {
            "should_render": false
        },
        "entity_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:raycast",
                    "distance": 20,
                    "block": true,
                    "entity": true,
                    "shape_type": "visual",
                    "fluid_handling": "none",
                    "bientity_action": {
                        "type": "origins:and",
                        "actions": [
                            {
                                "type": "origins:target_action",
                                "action": {
                                    "type": "origins:and",
                                    "actions": [
                                        {
                                            "type": "origins:execute_command",
                                            "command": "power grant @s manhunt:herald/bark/bark_effects"
                                        },
                                        {
                                            "type": "origins:execute_command",
                                            "command": "particle minecraft:dust_color_transition 0.1 0.1 0.1 1 0 1 0 ~ ~1 ~ 0.5 0 0.5 1 100",
                                            "permission_level": 4
                                        },
                                        {
                                            "type": "origins:execute_command",
                                            "command": "playsound minecraft:block.anvil.use player @a ~ ~ ~ 1 0.7",
                                            "permission_level": 4
                                        }
                                    ]
                                }
                            },
                            {
                                "type": "origins:actor_action",
                                "action": {
                                    "type": "origins:and",
                                    "actions": [
                                        {
                                            "type": "origins:change_resource",
                                            "resource": "manhunt:herald/bark/bark_shield_charges",
                                            "change": -1
                                        },
                                        {
                                            "type": "origins:if_else",
                                            "condition": {
                                                "type": "origins:resource",
                                                "resource": "manhunt:herald/bark/bark_shield_charges",
                                                "comparison": "==",
                                                "compare_to": 2
                                            },
                                            "if_action":{
                                                "type": "origins:change_resource",
                                                "resource": "manhunt:herald/bark/bark_shield_cooldown",
                                                "change": 45
                                            }
                                        }
                                    ]
                                }
                            }
                        ]
                    },
                    "bientity_condition": {
                        "type": "origins:target_condition",
                        "condition": {
                            "type": "origins:and",
                            "conditions": [
                                {
                                    "type": "origins:living"
                                },
                                {
                                    "type": "origins:origin",
                                    "origin": "manhunt:hunter",
                                    "layer": "origins:origin"
                                },
                                {
                                    "type": "origins:power",
                                    "power": "manhunt:herald/bark/bark_effects",
                                    "inverted": true
                                }
                            ]
                        }
                    },
                    "command_step": 1,
                    "command_along_ray_only_on_hit": true
                }
            ]
        },
        "key": "key.attack",
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:resource",
                    "resource": "manhunt:herald/bark/bark_shield_charges",
                    "comparison": ">",
                    "compare_to": 0
                },
                {
                    "type": "apugli:key_pressed",
                    "key": {
                        "key": "key.origins.primary_active",
                        "continuous": true
                    }
                },
                {
                    "type": "origins:raycast",
                    "distance": 20,
                    "block": false,
                    "entity": true,
                    "shape_type": "visual",
                    "fluid_handling": "none",
                    "hit_bientity_condition": {
                        "type": "origins:target_condition",
                        "condition": {
                            "type": "origins:and",
                            "conditions": [
                                {
                                    "type": "origins:living"
                                },
                                {
                                    "type": "origins:origin",
                                    "origin": "manhunt:hunter",
                                    "layer": "origins:origin"
                                },
                                {
                                    "type": "origins:power",
                                    "power": "manhunt:herald/bark/bark_effects",
                                    "inverted": true
                                }
                            ]
                        }
                    }
                } 
            ]
        }
    },
    "right_click": {
        "type": "origins:active_self",
        "cooldown": 1,
        "hud_render": {
            "should_render": false
        },
        "entity_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:execute_command",
                    "command": "power grant @s manhunt:herald/bark/bark_effects"
                },
                {
                    "type": "origins:swing_hand",
                    "hand": "MAIN_HAND"
                },
                {
                    "type": "origins:execute_command",
                    "command": "particle minecraft:dust_color_transition 0.1 0.1 0.1 1 0 1 0 ~ ~1 ~ 0.5 0 0.5 1 100",
                    "permission_level": 4
                },
                {
                    "type": "origins:execute_command",
                    "command": "playsound minecraft:block.anvil.use player @a ~ ~ ~ 1 0.7",
                    "permission_level": 4
                },
                {
                    "type": "origins:change_resource",
                    "resource": "manhunt:herald/bark/bark_shield_charges",
                    "change": -1
                },
                {
                    "type": "origins:if_else",
                    "condition": {
                        "type": "origins:resource",
                        "resource": "manhunt:herald/bark/bark_shield_charges",
                        "comparison": "==",
                        "compare_to": 2
                    },
                    "if_action":{
                        "type": "origins:change_resource",
                        "resource": "manhunt:herald/bark/bark_shield_cooldown",
                        "change": 45
                    }
                }
            ]
        },
        "key": "key.use",
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:resource",
                    "resource": "manhunt:herald/bark/bark_shield_charges",
                    "comparison": ">",
                    "compare_to": 0
                },
                {
                    "type": "apugli:key_pressed",
                    "key": {
                        "key": "key.origins.primary_active",
                        "continuous": true
                    }
                },
                {
                    "type": "origins:power",
                    "power": "manhunt:herald/bark/bark_effects",
                    "inverted": true
                }
            ]
        }
    },
    "charges": {
        "type": "origins:resource",
        "min": 0,
        "max": 2,
        "start_value": 2,
        "hud_render": {
            "sprite_location": "manhunt:textures/bark_shields.png",
            "bar_index": 0,
            "should_render": true
        }
    },
    "cooldown": {
        "type": "origins:resource",
        "min": 0,
        "max": 45,
        "start_value": 45,
        "hud_render": {
            "should_render": true,
            "sprite_location": "origins:textures/gui/community/huang/resource_bar_02.png",
            "bar_index": 8,
            "condition": {
                "type": "origins:resource",
                "resource": "manhunt:herald/bark/bark_shield_charges",
                "comparison": "<",
                "compare_to": 2
            }
        },
        "min_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:change_resource",
                    "resource": "manhunt:herald/bark/bark_shield_charges",
                    "change": 1
                },
                {
                    "type": "origins:change_resource",
                    "resource": "manhunt:herald/bark/bark_shield_cooldown",
                    "change": 45
                }
            ]
        }
    },
    "cooldown_down": {
        "type": "origins:action_over_time",
        "entity_action": {
            "type": "origins:change_resource",
            "resource": "manhunt:herald/bark/bark_shield_cooldown",
            "change": -1
        },
        "interval": 20,
        "condition":{
            "type": "origins:resource",
            "resource": "manhunt:herald/bark/bark_shield_charges",
            "comparison": "<",
            "compare_to": 2
        }
    },
    "overlay": {
        "type": "origins:status_bar_texture",
        "texture": "manhunt:textures/gui/bark_overlay.png",
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:raycast",
                    "distance": 20,
                    "block": false,
                    "entity": true,
                    "shape_type": "visual",
                    "fluid_handling": "none",
                    "hit_bientity_condition": {
                        "type": "origins:target_condition",
                        "condition": {
                            "type": "origins:and",
                            "conditions": [
                                {
                                    "type": "origins:living"
                                },
                                {
                                    "type": "origins:origin",
                                    "origin": "manhunt:hunter",
                                    "layer": "origins:origin"
                                },
                                {
                                    "type": "origins:power",
                                    "power": "manhunt:herald/bark/bark_effects",
                                    "inverted": true
                                }
                            ]
                        }
                    }
                },
                {
                    "type": "origins:resource",
                    "resource": "manhunt:herald/bark/bark_shield_charges",
                    "comparison": ">",
                    "compare_to": 0
                },
                {
                    "type": "apugli:key_pressed",
                    "key": {
                        "key": "key.origins.primary_active",
                        "continuous": true
                    }
                }
            ]
        }
    },
    "name": "Tree Bark Shield",
    "description": "Channel nature's force to protect and regenerate yourself and your fellow companions.",
    "badges": [
        {
            "type": "origins:tooltip",
            "sprite": "origins:textures/gui/badge/star.png",
            "text": "Bark Shield: +4 Armor and 1 heart per 1.5s for 9s.\nLook directly at a teammate to select them."
        },
        {
            "type": "origins:keybind",
            "sprite": "origins:textures/gui/badge/toggle.png",
            "text": "Hold %s and press Left Click to apply to a teammate!\nRight Click will instead apply it to yourself!"
        },
        {
            "type": "origins:tooltip",
            "sprite": "manhunt:textures/icons/cooldown.png",
            "text": "Max Charges: 2\nCooldown: 45s per charge"
        }
    ]
}