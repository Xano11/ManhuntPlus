                {
                    "type": "origins:execute_command",
                    "command": "power grant @a[tag=runner] manhunt:engineer/scan/scanning"
                }
            ]
        },
        "key": {
            "key": "key.use"
        },
        "cooldown": 1200,
        "hud_render": {
